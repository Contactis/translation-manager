form()
  .modal-header
    h3 {{ 'COMMON.TEMPALTES.DIALOG.ADD_TRANSLATION_KEY_MODAL.ADD_NEW_TRANSLATION_KEY' | translate }} ({{vm.currentProject.defaultLanguage.nameNative}})

  tr-waiting-spinner-div(is-pending="vm.isPending")

  .modal-body(data-ng-hide="vm.isPending")
    .row
      .col-sm-6(style="margin:0")
        .form-group
          label.control-label {{ 'COMMON.TEMPALTES.DIALOG.ADD_TRANSLATION_KEY_MODAL.KEY_INDEX_TYPE' | translate }}
          select.form-control(data-ng-model="vm.translationKey.isPlural")
            option(value="string") {{ 'COMMON.TEMPALTES.DIALOG.ADD_TRANSLATION_KEY_MODAL.STRING' | translate }}
            option(value="plural") {{ 'COMMON.TEMPALTES.DIALOG.ADD_TRANSLATION_KEY_MODAL.PLURAL_FORMS' | translate }}

    .form-group
      label(for="namespaceInput") {{ 'COMMON.TEMPALTES.DIALOG.ADD_TRANSLATION_KEY_MODAL.NAMESPACE' | translate }}
      input.form-control(id="namespaceInput" type="text" placeholder="ex: dashboard.account" data-ng-model="vm.namespace" uib-typeahead="singleNamespace.namespace for singleNamespace in vm.getNamespaces($viewValue)")

    .form-group
      label(for="keyString") {{ 'COMMON.TEMPALTES.DIALOG.ADD_TRANSLATION_KEY_MODAL.KEY_INDEX' | translate }}
      input.form-control(id ="keyString" type="text" placeholder="ex: edit my account" data-ng-model="vm.translationKey.keyString")

    .form-group(data-ng-show="vm.isPlural()")
      label.control-label {{ 'COMMON.TEMPALTES.DIALOG.ADD_TRANSLATION_KEY_MODAL.PLURAL_FORMS' | translate }} ({{vm.currentProject.defaultLanguage.nameNative}})
      .row
        .col-sm-6(style="margin:0")
          .form-group(data-ng-repeat="n in vm.plurals")
            label {{vm.getNameOfPlural(n.pluralForm)}}
            input.form-control(type="text" data-ng-model="n.pluralTranslationString" placeholder="")


    .form-group(data-ng-show="!vm.isPlural()")
      label.control-label {{ 'COMMON.TEMPALTES.DIALOG.ADD_TRANSLATION_KEY_MODAL.DEFAULT_TRANSLATION' | translate }} ({{vm.currentProject.defaultLanguage.nameNative}})
      input.form-control(type="text" placeholder="" data-ng-model="vm.translation.translatedPhrase")

    .form-group
      label.control-label {{'COMMON.TEMPALTES.DIALOG.ADD_TRANSLATION_KEY_MODAL.LIVE_PREVIEW_RESULT' | translate }}
      .panel.panel-warning
        .panel-body {{ 'APP.FRONTEND_MESSAGES.THIS_FEATURE_IS_NOT_YET_READY' |  translate }}


    .form-group
      label.control-label(for="descriptionInput" data-ng-model="vm.translation.description") {{ 'COMMON.TEMPALTES.DIALOG.ADD_TRANSLATION_KEY_MODAL.CONTEXT_DESCRIPTION' | translate }}
      textarea.form-control(id="descriptionInput" rows="3" placeholder="Simple description better describing current index key for translator if necessary")


  .modal-footer
    button.btn.btn-success.pull-right(type="button" ng-click="vm.saveTranslationKey()") {{ 'GENERAL.CREATE' | translate }}
    button.btn.btn-warning.pull-right.margin-right-15(type="button" ng-click="vm.cancel()") {{ 'GENERAL.CANCEL' | translate }}

  h2 Debug variables
  pre
    | vm.isPending {{vm.isPending|json}}
    | vm.currentProject {{vm.currentProject|json}}
    | vm.plurals {{vm.plurals|json}}
