.primary-containter
  md-toolbar(layout='row')
    .md-toolbar-tools

      h1.md-toolbar-tools
        | {{ contextMenu.name }}
        md-menu(md-offset='0 -5' flex="1")
          md-button.md-icon-button(aria-label='Open page menu', ng-click='$mdOpenMenu()')
            md-tooltip
              | Context page options
            md-icon(md-menu-origin='' flex) keyboard_arrow_down
          md-menu-content(width='4')
            md-menu-item(ng-repeat='link in contextMenu.links')
              md-button(ng-click='link.method')
                | {{ link.name }}
                //- span(md-menu-align-target='')

      //div.missingTranslations
      //    md-icon.redIcon warning
      //    span Current missing translations: 78

      span(flex)
      div.width40p
        md-input-container.padding-bottom-0
          md-select(ng-model="filters.translation" placeholder="Translation")
            md-option(ng-repeat="single in static.translation track by $index" value="{{single.value}}" ng-selected="{{single.default}}") {{single.name}}
      div.width40p
        md-input-container.padding-bottom-0
          md-select(ng-model="filters.plural" placeholder="Pluralization")
            md-option(ng-repeat="single in static.plurals track by $index" value="{{single.value}}" ng-selected="{{single.default}}") {{single.name}}
      form
        md-input-container
          label Search a phrase
          input(type='text' ng-model-options="{ debounce: 250 }" ng-model='filters.inputSearch')
      md-button.md-icon-button(ng-click="toogleSidenav('left')")
        md-icon(flex) more_vert
